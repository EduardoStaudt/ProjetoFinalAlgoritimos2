{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compilar Jogo",
            "command": "C:/Program Files/CodeBlocks/MinGW/bin/gcc.exe",
            "args": [
                "src/main.c",
                "src/game.c", 
                "src/ranking.c",
                "src/utils.c",
                "-Iinclude",
                "-o",
                "jogo_memoria.exe",
                "-g"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}